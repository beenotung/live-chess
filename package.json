{
  "name": "apple-chess",
  "version": "1.0.0",
  "type": "module",
  "description": "",
  "keywords": [],
  "author": {
    "name": "Beeno Tung",
    "email": "aabbcc1241@yahoo.com.hk",
    "url": "https://beeno-tung.surge.sh"
  },
  "license": "BSD-2-Clause",
  "scripts": {
    "lint": "eslint --fix .",
    "format": "prettier --write . && format-json-cli",
    "fix": "run-p fix:*",
    "fix:server": "fix-esm-import-path server/index.ts",
    "fix:client": "fix-esm-import-path client/index.ts",
    "fix-dist": "fix-esm-import-path dist/db/proxy.js",
    "build": "run-p build:*",
    "build:server": "tsc -p . && npm run fix-dist",
    "build:client": "esbuild client/index.ts --bundle --minify --outfile=build/bundle.min.js",
    "size": "run-s size:*",
    "size:bundle": "esbuild client/index.ts --bundle --outfile=build/bundle.js",
    "size:minify": "esbuild client/index.ts --bundle --minify --outfile=build/bundle.min.js",
    "size:compress": "gzip -kf build/bundle.min.js",
    "size:report": "ls -l build/bundle.*",
    "size:report-h": "ls -lh build/bundle.*",
    "start": "node dist/server/index.js --prod",
    "dev": "run-s build reset-open watch",
    "reset-open": "node scripts/reset-open.js",
    "watch": "run-p watch:*",
    "watch:server": "tsc -p . -w",
    "watch:client": "esbuild client/index.ts --watch --bundle --minify --outfile=build/bundle.min.js",
    "watch:js": "nodemon --ignore dist/client dist/server/index.js -- --dev"
  },
  "dependencies": {
    "@beenotung/tslib": "^23.4.0",
    "better-sqlite3-proxy": "^2.6.0",
    "better-sqlite3-schema": "^3.1.3",
    "cast.ts": "^1.12.2",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "debug": "^4.3.4",
    "dotenv": "^16.4.5",
    "escape-html": "^1.0.3",
    "express": "^4.19.2",
    "fastest-levenshtein": "^1.0.16",
    "listening-on": "^2.0.9",
    "marked": "^12.0.1",
    "open": "^10.1.0",
    "sanitize-html": "^2.13.0",
    "spdy": "^4.0.2",
    "timezone-date.ts": "^2.0.1",
    "url-router.ts": "^1.2.0",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.7",
    "@types/debug": "^4.1.12",
    "@types/escape-html": "^1.0.4",
    "@types/express": "^4.17.21",
    "@types/integer": "^4.0.3",
    "@types/node": "^20.12.5",
    "@types/sanitize-html": "^2.11.0",
    "@types/spdy": "^3.4.9",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^7.5.0",
    "@typescript-eslint/parser": "^7.5.0",
    "esbuild": "^0.20.2",
    "eslint": "^9.0.0",
    "fix-esm-import-path": "^1.5.0",
    "format-json-cli": "^1.0.2",
    "gen-env": "^1.0.1",
    "nodemon": "^3.1.0",
    "npm-run-all": "^4.1.5",
    "populate-env": "^2.0.0",
    "prettier": "^3.2.5",
    "typescript": "^5.4.4"
  }
}
